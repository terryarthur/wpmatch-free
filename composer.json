{
    "name": "terry/wpmatch-free",
    "description": "WordPress Dating Site Plugin",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "wp-coding-standards/wpcs": "^3.0",
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Terry Arthur"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf", 
        "test": "phpunit",
        "test:install": "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest",
        "test:unit": "phpunit --testsuite=wpmatch-free",
        "test:coverage": "phpunit --coverage-html coverage-html"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
